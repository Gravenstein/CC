-- Mines a 2-high fully lit branchmine --
-- Place at desired head height --
-- Args --

local tArgs = {...}
if #tArgs == 0 then
 print(" Syntax: branchmine <length>")
 error()
end

local i = 0
local h = 2
local length = tArgs[1]
local torchesNeeded = length/10 + 1
local fuelNeeded = length*2 + 1

-- Functions --

local forward = function()
 turtle.dig()
 turtle.forward()
 turtle.digDown()
end

-- Check conditions --

local isInvalid = false

if turtle.getItemCount(1) < torchesNeeded then
 print(" Additional torches needed: "..torchesNeeded - turtle.getItemCount(1))
 isInvalid = true
end

if turtle.getFuelLevel() < fuelNeeded then
 print(" Additional fuel needed: "..fuelNeeded - turtle.getFuelLevel())
 isInvalid = true
end

if isInvalid then
 error()
end

-- Main --

turtle.select(1)
for l = 1,length do
 forward()
 if l%10 == 0 then
  turtle.placeDown()
 end
end
if length%10 > 5 then
 turtle.placeDown()
end
turtle.turnRight()
turtle.turnRight()
for l = 2,length do
 turtle.forward()
end
turtle.down()
print(" Branch complete")
